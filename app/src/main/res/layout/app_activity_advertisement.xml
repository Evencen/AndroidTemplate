<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:scroll_time="1200"/>

    <Button
        android:id="@+id/btn_show_readme"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="@dimen/app_activity_common_textsize"
        android:layout_margin="@dimen/app_activity_vertical_margin"
        android:textColor="@color/app_ad_text_color"
        android:text="@string/app_ad_btn_show_readme"/>
</RelativeLayout>